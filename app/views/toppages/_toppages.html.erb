<ul class="media-list">
  
                              <% @tasks.each do |task| %>

    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="
            <%= gravatar_url(task.user, options = { size: 50 }) %>
                " alt="">
      </div>
          <div class="media-body">
                <table class="table table-bordered">
                <thead>
                    <tr>
                      <th class="col-xs-2"><%= task.id %></th>
                      <td class="col-xs-2"><%= task.content %></td>
                      <td class="col-xs-2"><%= task.status %></td>
                      <td class="col-xs-1"><%= link_to '編集', task_path(task.id), class: 'btn btn-info' %></td>
                      <td class="col-xs-1"><%= link_to '削除', task_path(task.id), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %></td>

                      
                </thead>

                <tbody>
                  
                      
                    
                  
                </tbody>
            </table>
            
                
                
                
