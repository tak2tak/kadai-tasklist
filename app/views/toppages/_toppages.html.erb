                  <%= link_to task.user.name, user_path(task.user) %>
                     <span class="text-muted">posted at 
                        <%= task.created_at %>
                    </span>
                </div> 
-->
            <div>
          <p>
            </p>
        </div>
      </div>
    </li>
  

  
<%= paginate @tasks %>
<% end %>

</ul>