<%= form_for(task) do |f| %>

<!--　↓エラーメッセージ表示用 -->
<% if task.errors.any? %>

    <div id="error_explanation">
      <ul>
        
<% task.errors.full_messages.each do |task| %>

          <li>
<%= task %>
</li>
        
<% end %>

      </ul>
    </div>
  
<% end %>
<!-- ↑ここまで↑ -->
<%= f.label :status, 'ステータス' %>
<%= f.text_field :status %>

<%= f.label :content, 'タスク' %>
<%= f.text_field :content %>

<%= f.submit '作成' %>

<% end %>